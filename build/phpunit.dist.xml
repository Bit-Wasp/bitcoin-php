<phpunit
    bootstrap="../vendor/autoload.php"
    colors="true">
    <testsuites>
        <testsuite name="unit">
            <directory>../tests/Bitcoin</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>../src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="docs/code-coverage"/>
        <log type="coverage-clover" target="logs/clover.xml"/>
    </logging>
</phpunit>
